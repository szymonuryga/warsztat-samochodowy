<Window x:Class="GUI.NaprawaOkno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="NaprawaOkno" Height="400" Width="800">
    <Canvas Margin="0,0,0,0">
        <TextBox x:Name="txtOpis" HorizontalAlignment="Left" Height="40" TextWrapping="Wrap" VerticalAlignment="Top" Width="390" FontSize="16" Canvas.Left="200" Canvas.Top="15"/>
        <ComboBox x:Name="cbKategoria" Height="40" VerticalAlignment="Top" RenderTransformOrigin="0.599,-1.288" FontSize="16" HorizontalAlignment="Left" Width="300" Canvas.Left="200" Canvas.Top="57">
            <ComboBoxItem x:Name="mechaniczna" Content="mechaniczna"/>
            <ComboBoxItem x:Name="blacharska" Content="blacharska"/>
            <ComboBoxItem x:Name="lakiernicza" Content="lakiernicza"/>
            <ComboBoxItem x:Name="blacharsko_lakiernicza" Content="blacharsko - lakiernicza"/>
            <ComboBoxItem x:Name="wymiana_opon" Content="wymiana_opon"/>
        </ComboBox>
        <TextBox x:Name="txtDataPrzyj" Height="40" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" HorizontalAlignment="Left" Width="120" Text="dd-MM-yyyy" Canvas.Left="200" Canvas.Top="99"/>
        <TextBox x:Name="txtSamochod" HorizontalAlignment="Left" Height="40" TextWrapping="Wrap" VerticalAlignment="Top" Width="390" FontSize="16" Canvas.Left="200" Canvas.Top="141"/>
        <Button x:Name="btnZatwierdz" Content="Zatwierdź" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="50" Click="btnZatwierdz_Click" Canvas.Left="160" Canvas.Top="295" FontSize="16"/>
        <Button x:Name="btnAnuluj" Content="Anuluj" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="50" RenderTransformOrigin="0.462,0.2" Click="btnAnuluj_Click" Canvas.Left="450" Canvas.Top="295" FontSize="16"/>
        <Label Content="Opis" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="40" FontSize="16" Canvas.Left="30" Canvas.Top="15"/>
        <Label Content="Kategoria" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="40" FontSize="16" Canvas.Left="30" Canvas.Top="57"/>
        <Label Content="Data Przyjęcia" HorizontalAlignment="Left" VerticalAlignment="Top" Width="145" Height="40" FontSize="16" Canvas.Left="30" Canvas.Top="99"/>
        <Label Content="Samochód" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="40" FontSize="16" Canvas.Left="30" Canvas.Top="141"/>
        <Label Content="Klient" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="40" FontSize="16" Canvas.Left="30" Canvas.Top="183"/>
        <Button x:Name="btnDodajSamo" Content="Dodaj" HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" Height="40" Click="btnDodajSamo_Click" Canvas.Left="620" Canvas.Top="141"/>
        <TextBox x:Name="txtKlient" Height="40" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" HorizontalAlignment="Left" Width="390" RenderTransformOrigin="0.501,0.56" Canvas.Left="200" Canvas.Top="183"/>
        <Button x:Name="btnDodajKlienta" Content="Dodaj" HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" Height="40" Click="btnDodajKlient_Click" Canvas.Left="620" Canvas.Top="183"/>
        <Label Content="Pracownik" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="40" FontSize="16" Canvas.Left="30" Canvas.Top="225"/>
        <ComboBox x:Name="comboBoxPracownicy" HorizontalAlignment="Left" VerticalAlignment="Top" Width="390" Height="40" Canvas.Left="200" Canvas.Top="225"/>

    </Canvas>
</Window>
